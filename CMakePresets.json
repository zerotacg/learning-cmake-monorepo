{
  "version": 6,
  "include": [
    "cmake/CMakePresets.base.json",
    "project-a/CMakePresets.json",
    "project-b/CMakePresets.json",
    "project-c/CMakePresets.json"
  ],
  "configurePresets": [
    {
      "name": "monorepo",
      "inherits": [
        "vcpkg",
        "defaults"
      ]
    }
  ],
  "buildPresets": [
    {
      "name": "monorepo",
      "configurePreset": "monorepo",
      "configuration": "Release",
      "targets": [
        "all"
      ]
    },
    {
      "name": "monorepo/install",
      "inherits": "monorepo",
      "targets": [
        "install"
      ]
    }
  ],
  "testPresets": [
    {
      "name": "monorepo",
      "inherits": "default",
      "configurePreset": "monorepo"
    }
  ],
  "packagePresets": [
    {
      "name": "monorepo",
      "inherits": "subproject",
      "configurePreset": "monorepo"
    }
  ],
  "workflowPresets": [
    {
      "name": "monorepo",
      "steps": [
        {
          "type": "configure",
          "name": "monorepo"
        },
        {
          "type": "build",
          "name": "monorepo"
        },
        {
          "type": "test",
          "name": "monorepo"
        },
        {
          "type": "package",
          "name": "monorepo"
        },
        {
          "type": "build",
          "name": "monorepo/install"
        }
      ]
    }
  ]
}