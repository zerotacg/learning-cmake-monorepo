{
  "version": 6,
  "configurePresets": [
    {
      "name": "default",
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build/${presetName}"
    },
    {
      "inherits": "default",
      "name": "project-a",
      "cacheVariables": {
        "CPACK_PACKAGE_NAME": "${presetName}",
        "CPACK_INSTALL_CMAKE_PROJECTS": "${sourceDir}/build/${presetName};${presetName};${presetName};/"
      }
    },
    {
      "inherits": "default",
      "name": "project-b",
      "cacheVariables": {
        "CPACK_PACKAGE_NAME": "${presetName}",
        "CPACK_INSTALL_CMAKE_PROJECTS": "${sourceDir}/build/${presetName};${presetName};${presetName};/"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default",
      "configuration": "Release"
    },
    {
      "inherits": "default",
      "name": "project-a",
      "configurePreset": "project-a"
    },
    {
      "inherits": "default",
      "name": "project-b",
      "configurePreset": "project-b"
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "configurePreset": "default",
      "configuration": "Release",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      }
    },
    {
      "inherits": "default",
      "name": "project-a",
      "configurePreset": "project-a"
    },
    {
      "inherits": "default",
      "name": "project-b",
      "configurePreset": "project-b"
    }
  ],
  "packagePresets": [
    {
      "name": "default",
      "configurePreset": "default",
      "configurations": [
        "Release"
      ],
      "generators": [
        "TGZ",
        "STGZ"
      ]
    },
    {
      "inherits": "default",
      "name": "project-a",
      "configurePreset": "project-a"
    },
    {
      "inherits": "default",
      "name": "project-b",
      "configurePreset": "project-b"
    }
  ],
  "workflowPresets": [
    {
      "name": "project-a",
      "steps": [
        {
          "type": "configure",
          "name": "project-a"
        },
        {
          "type": "build",
          "name": "project-a"
        },
        {
          "type": "test",
          "name": "project-a"
        },
        {
          "type": "package",
          "name": "project-a"
        }
      ]
    },
    {
      "name": "project-b",
      "steps": [
        {
          "type": "configure",
          "name": "project-b"
        },
        {
          "type": "build",
          "name": "project-b"
        },
        {
          "type": "test",
          "name": "project-b"
        },
        {
          "type": "package",
          "name": "project-b"
        }
      ]
    }
  ]
}