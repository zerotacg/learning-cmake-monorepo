{
  "version": 6,
  "configurePresets": [
    {
      "name": "defaults",
      "hidden": true,
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "${sourceDir}/build/install"
    },
    {
      "name": "monorepo",
      "inherits": [
        "vcpkg",
        "defaults"
      ]
    },
    {
      "name": "subproject",
      "inherits": "defaults",
      "hidden": true,
      "cacheVariables": {
        "CPACK_PACKAGE_NAME": "${presetName}",
        "CPACK_INSTALL_CMAKE_PROJECTS": "${sourceDir}/build/${presetName};${presetName};${presetName};/"
      }
    },
    {
      "name": "vcpkg",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "project-a",
      "inherits": [
        "vcpkg",
        "subproject"
      ]
    },
    {
      "name": "project-b",
      "inherits": [
        "vcpkg",
        "subproject"
      ],
      "cacheVariables": {
        "CPACK_PACKAGE_NAME": "${presetName}",
        "CPACK_INSTALL_CMAKE_PROJECTS": "${sourceDir}/build/${presetName};${presetName};${presetName};/"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "monorepo",
      "configurePreset": "monorepo",
      "configuration": "Release",
      "targets": [
        "all"
      ]
    },
    {
      "name": "monorepo/install",
      "inherits": "monorepo",
      "targets": [
        "install"
      ]
    },
    {
      "name": "subproject",
      "hidden": true,
      "configuration": "Release",
      "targets": [
        "${presetName}/all"
      ]
    },
    {
      "inherits": "subproject",
      "name": "project-a",
      "configurePreset": "project-a"
    },
    {
      "inherits": "project-a",
      "name": "project-a/install",
      "targets": [
        "${presetName}"
      ]
    },
    {
      "inherits": "subproject",
      "name": "project-b",
      "configurePreset": "project-b"
    },
    {
      "inherits": "project-b",
      "name": "project-b/install",
      "targets": [
        "${presetName}"
      ]
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "hidden": true,
      "configuration": "Release",
      "output": {
        "outputOnFailure": true,
        "subprojectSummary": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      }
    },
    {
      "name": "subproject",
      "inherits": "default",
      "hidden": true,
      "filter": {
        "include": {
          "name": "${presetName}."
        }
      }
    },
    {
      "name": "monorepo",
      "inherits": "default",
      "configurePreset": "monorepo"
    },
    {
      "name": "project-a",
      "inherits": "subproject",
      "configurePreset": "project-a"
    },
    {
      "name": "project-b",
      "inherits": "subproject",
      "configurePreset": "project-b"
    }
  ],
  "packagePresets": [
    {
      "name": "subproject",
      "hidden": true,
      "configurations": [
        "Release"
      ],
      "generators": [
        "TGZ",
        "STGZ"
      ]
    },
    {
      "name": "monorepo",
      "inherits": "subproject",
      "configurePreset": "monorepo"
    },
    {
      "name": "project-a",
      "inherits": "subproject",
      "configurePreset": "project-a"
    },
    {
      "name": "project-b",
      "inherits": "subproject",
      "configurePreset": "project-b"
    }
  ],
  "workflowPresets": [
    {
      "name": "monorepo",
      "steps": [
        {
          "type": "configure",
          "name": "monorepo"
        },
        {
          "type": "build",
          "name": "monorepo"
        },
        {
          "type": "test",
          "name": "monorepo"
        },
        {
          "type": "package",
          "name": "monorepo"
        },
        {
          "type": "build",
          "name": "monorepo/install"
        }
      ]
    },
    {
      "name": "project-a",
      "steps": [
        {
          "type": "configure",
          "name": "project-a"
        },
        {
          "type": "build",
          "name": "project-a"
        },
        {
          "type": "test",
          "name": "project-a"
        },
        {
          "type": "package",
          "name": "project-a"
        },
        {
          "type": "build",
          "name": "project-a/install"
        }
      ]
    },
    {
      "name": "project-b",
      "steps": [
        {
          "type": "configure",
          "name": "project-b"
        },
        {
          "type": "build",
          "name": "project-b"
        },
        {
          "type": "test",
          "name": "project-b"
        },
        {
          "type": "package",
          "name": "project-b"
        },
        {
          "type": "build",
          "name": "project-b/install"
        }
      ]
    }
  ]
}